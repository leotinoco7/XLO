// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  CPF      String  @unique
  imageUrl String
  ranking  Int
  isAdmin  Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Deck {
  id           String @id @default(uuid())
  name         String
  cardQuantity Int
  deckAttack   Int
  deckDefense  Int
}

model Card {
  id         String @id @default(uuid())
  name       String
  element    String
  cardAttack Int
  cardDef    Int

}
